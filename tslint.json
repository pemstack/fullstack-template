{
  "defaultSeverity": "warning",
  "extends": [
    "tslint:recommended",
    "tslint-react"
  ],
  "rules": {
    "trailing-comma": [
      true,
      "never"
    ],
    "quotemark": [
      true,
      "single"
    ],
    "semicolon": [
      true,
      "never"
    ],
    "arrow-parens": false,
    "no-console": false,
    "interface-name": false,
    "only-arrow-functions": false,
    "no-empty": false,
    "max-classes-per-file": false,
    "member-access": false,
    "member-ordering": false,
    "jsx-no-lambda": false,
    "jsx-no-multiline-js": false,
    "jsx-boolean-value": false,
    "no-empty-interface": false,
    "space-before-function-paren": [
      true,
      {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "always"
      }
    ]
  }
}
